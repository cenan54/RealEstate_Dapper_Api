@model List<ResultPopularLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<style>
    img{
        border-radius:50%;
    }
</style>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Popüler Konumlar Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir Adı</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                            }
                            @foreach (var item in Model)
                            {
                                counter++;
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td> <img src="@item.ImageUrl" height="70px" width="70px" /> @item.CityName</td>
                                    <td><a href="/PopularLocation/UpdatePopularLocation/@item.LocationID" class="btn btn-sm btn-outline-success">Güncelle</a></td>
                                    <td><a href="/PopularLocation/DeletePopularLocation/@item.LocationID" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a class="btn btn-outline-info" href="/PopularLocation/CreatePopularLocation">Yeni Popüler Konum Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

