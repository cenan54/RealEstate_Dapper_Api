@model List<RealEstate_Dapper_UI.Dtos.ProductDtos.ResultProductAdvertListWithCategoryByEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/EstateAgent/Views/LayoutEstateAgent/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Geçmiş İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Aktifleştir</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Sitede Gör</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                            }
                            @foreach (var item in Model)
                            {
                                counter++;
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>@item.Title</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Price</td>
                                    <td>@item.Type</td>
                                    <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-sm btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-sm btn-outline-secondary">Aktifleştir</a></td>
                                    <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-sm btn-outline-danger">Sil</a></td>
                                    <td><a href="/Product/ProductDetail/@item.ProductID" class="btn btn-sm btn-outline-primary">Sitede Gör</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a class="btn btn-outline-info" href="/Product/CreateProduct">Yeni İlan Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>